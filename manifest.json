{
  "manifest_version": 2,
  "minimum_chrome_version": "23",

  "name": "Robot Controller",
  "short_name": "Controller",
  "version": "0.0.3",

  "description": "Connect to robots using Google Chrome.",
  "permissions": [
    "storage",
    "http://www.gravatar.com/",
    "http://en.gravatar.com/",
    "*://*/*"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": ["js/background.js", "js/robot.js"]
    }
  }
}
